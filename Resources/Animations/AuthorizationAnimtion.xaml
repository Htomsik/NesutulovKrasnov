<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--  Кнопка при наведении  -->
    <Storyboard x:Key="ButtonIsFocused">

        <ColorAnimationUsingKeyFrames Storyboard.TargetName="label" Storyboard.TargetProperty="(TextElement.Foreground).(SolidColorBrush.Color)">
            <EasingColorKeyFrame KeyTime="0:0:0.1" Value="White" />
        </ColorAnimationUsingKeyFrames>


        <ColorAnimationUsingKeyFrames Storyboard.TargetName="button" Storyboard.TargetProperty="(Panel.Background).(SolidColorBrush.Color)">
            <EasingColorKeyFrame KeyTime="0:0:0.1" Value="#FF535365" />
        </ColorAnimationUsingKeyFrames>

    </Storyboard>

    <!--  Кнопка после наведения  -->
    <Storyboard x:Key="ButtonUnfocused">

        <ColorAnimationUsingKeyFrames
            Storyboard.TargetName="label"
            Storyboard.TargetProperty="(TextElement.Foreground).(SolidColorBrush.Color)"
            Duration="0:0:0.1" />


        <ColorAnimationUsingKeyFrames
            Storyboard.TargetName="button"
            Storyboard.TargetProperty="(Panel.Background).(SolidColorBrush.Color)"
            Duration="0:0:0.1" />



    </Storyboard>

</ResourceDictionary>