<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">


    <!--  Для фона  -->
    <SolidColorBrush x:Key="60Color" Color="{DynamicResource 60Color(color)}" />

    <!--  Для меню и больших кнопок  -->
    <SolidColorBrush x:Key="30Color" Color="{DynamicResource 30Color(color)}" />

    <!--  Текст  -->
    <SolidColorBrush x:Key="10Color" Color="{DynamicResource 10Color(color)}" />

    <!--  Дополнительный цвет  -->
    <SolidColorBrush x:Key="DopColor" Color="{DynamicResource DopColor(color)}" />

    <!--  Цвет при наведении на кнопку  -->
    <SolidColorBrush x:Key="DopColorIsFocused" Color="{DynamicResource DopColorIsFocused(color)}" />

    <!--  Цвет меню  -->
    <SolidColorBrush x:Key="Menucolor" Color="{DynamicResource Menucolor(color)}" />

    <!--  ......................... раздел на случай где нельзя использовать солиды .........................  -->

    <Color x:Key="60Color(color)">#3C4DB9</Color>

    <Color x:Key="30Color(color)">#C8B156</Color>

    <Color x:Key="10Color(color)">#D2D3DA</Color>

    <Color x:Key="DopColor(color)">#1C1C22</Color>

    <Color x:Key="DopColorIsFocused(color)">#535365</Color>

    <Color x:Key="Menucolor(color)">#1C1C22</Color>


</ResourceDictionary>